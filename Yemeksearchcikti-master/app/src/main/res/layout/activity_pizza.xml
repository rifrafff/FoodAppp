<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED9D84"
    tools:context=".PizzaActivity">



    <TextView
        android:id="@+id/tvMarkaAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="¿KİM?"
        android:textColor="#D30B0B"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCesit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PİZZA ÇEŞİTLERİ"
        android:layout_below="@+id/tvMarkaAdi"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#F43D03"
        android:textSize="20sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvCesit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/karisikpizza"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FAF2AB">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:src="@drawable/img_17"/>
                <TextView
                    android:id="@+id/tvklasik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1in"
                    android:text="Karışık Pizza"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"

                    android:paddingRight="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Peyniri,Pizza Sosu,Sucuk,Salam,Mantar,Yeşil Biber,Domates,Siyah Zeytin,Mısır"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/karisikpfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:drawableRight="@drawable/cart"
                    android:textColor="@color/black"
                    android:text="Fiyat:140TL"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/margheritapizza"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FAF2AB">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:src="@drawable/img_18"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1in"
                    android:text="Margherita "
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Peyniri,Pizza Sosu,Domates,Fesleğen"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/margheritapfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:drawableRight="@drawable/cart"
                    android:textColor="@color/black"
                    android:text="Fiyat:120TL"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tavuklupizza"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FAF2AB">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:src="@drawable/img_19"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1in"
                    android:text="Tavuklu Pizza"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Peyniri,Pizza Sosu,Biber,Paneli Tavuk"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tavuklupfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:drawableRight="@drawable/cart"
                    android:textColor="@color/black"
                    android:text="Fiyat:140TL"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/napolipizza"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FAF2AB">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:src="@drawable/img_20"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1in"
                    android:text="NAPOLİ PİZZA "
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Sosu,Pizza Peyniri,Siyah Zeytin,Domates"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/napolipfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:drawableRight="@drawable/cart"
                    android:textColor="@color/black"
                    android:text="Fiyat:130TL"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/veggipizza"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FAF2AB">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:src="@drawable/img_21"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1in"
                    android:text="Veggi Pizza "
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Sosu,Pizza Peyniri,Biber,Fesleğen"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/veggipfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.1in"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:drawableRight="@drawable/cart"
                    android:textColor="@color/black"
                    android:text="Fiyat:110TL"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>